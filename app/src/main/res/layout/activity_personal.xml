<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/person_images"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/minguo" />

        <TextView
            android:id="@+id/person_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_images"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="用户名" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/personal_ch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_green_light"
            android:gravity="center"
            android:text="c"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/personal_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/take_start"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/take_end_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/take_ml"
            android:paddingLeft="3dp"
            android:src="@mipmap/sett" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/take_end_pic"
            android:text="设置" />

        <ImageView
            android:id="@+id/mail_get_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/take_mr"
            android:paddingRight="3dp"
            android:src="@mipmap/arrow_right_blue" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@android:color/darker_gray" />


</LinearLayout>